@model Categoria

<form method="post">
    <!--relleno de 3px en todos los lados, margentop-4px-->
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Actualizar Categoría</h2>
            <hr />
        </div>

        <!--para mostrar todos los errores que hubieron en el formulario-->
        <!--<div asp-validation-summary="All"></div>-->

        <div class="mb-3 row p-1">
            <label asp-for="nombre" class="p-0"></label>
            <!--lo que se va a guardar, donde -->
            <input asp-for="nombre" type="text" class="form-control" />
            <span asp-validation-for="nombre" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" type="text" class="form-control" />
            <!--para que se muestre el mensaje-->
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary" style="width:150px">Actualizar</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Categoria" asp-action="Index" class="btn btn-secondary style="width:150px">
                    Regresar al Listado
                </a>
            </div>
        </div>
    </div>
</form>

