@model CarritoCompras
<style>
    .caja{
        background-color:white;
    }
</style>
<form method="post">
    <input hidden asp-for="ProductoId"/>
    <div class="card shadow border-0 mt-4 mb-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Producto.nombreProducto</h3>
                    <p class="text-white-50 fw-semibold mb-0">CiberChiken</p>
                </div>
            </div>
        </div>
        <div class="caja">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Index" class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                            <small>Regresar al Inicio</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.Producto.ImageUrl" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50  pb-2">
                                Precio Costo:
                                <span class="text-decoration-line-through">
                                    @Model.Producto.precio.ToString("c")
                                </span>
                            </h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50  pb-2">
                                Descripción:
                                    @Html.Raw(Model.Producto.descripcion)
                            </h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50  pb-2">
                                    ¡Gracias por elegir nuestros productos de comida rápida! Estamos encantados de servirte y brindarte 
                                    una experiencia deliciosa y satisfactoria. Nuestro equipo está listo para preparar los platos más sabrosos
                                    y frescos especialmente para ti. 
                                   ¡Disfruta de una comida rápida llena de sabor y calidad! ¡Estamos seguros de que te encantarán nuestros productos!
                            </h6>
                        </div>
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Cantidad
                                    </span>
                                    <input asp-for="Cantidad" type="number" value="1" class="form-control text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                                  </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" 
                                        class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                    Agregar al Carrito
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
