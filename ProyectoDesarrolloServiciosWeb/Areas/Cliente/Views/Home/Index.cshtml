            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


    <div class="container-promo">
        <div class="titulo-promo">
            <h2 class="h2-promo">Promociones</h2>
        </div>

        <div class="imgs-promo">
            <div class="img-promo">
                <img src="https://cdn-images-ppys-prod.s3.amazonaws.com/media/catalog/product/f/e/festi-cajun-full-card.jpg" />
            </div>
            <div class="img-promo">
                <img src="https://cdn-images-ppys-prod.s3.amazonaws.com/media/catalog/product/s/u/super-promo-cajun-card-nuevo.jpg" />
            </div>
        </div>
    </div>


    <div class="titulo-menu">
        <h2>Menu</h2>
    </div>


    <div class="row pb-3">
        @foreach (var producto in Model)
        {
            <div class="col-lg-3 col-sm-6" >
                <div class="row p-2">
                    <div class="col-12 p-1">
                        <div class="card border-0 p-3 shadow border-top border-5 rounded">
                            <img src="@producto.ImageUrl" class="card-img-top rounded">
                            <div class="card-body pb-0">
                                <div class="pl-1">
                                    <p class="card-title h5 text-white opacity-75 text-uppercase text-center">@producto.nombreProducto</p>
                                    <p class="card-title text-warning text-center">Categoría: @producto.Categoria.nombre</p>
                                </div>
                                <div class="pl-1">
                                    <p class="card-title text-white opacity-75 text-center mb-0">
                                           Precio: @producto.precio.ToString("c")
                                    </p>
                                </div>
                            </div>
                            <a asp-action="Details"
                               asp-route-productoId="@producto.idProducto"
                               class="btn btn-primary bg-gradient border-0 form-control">
                                Detalle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>


