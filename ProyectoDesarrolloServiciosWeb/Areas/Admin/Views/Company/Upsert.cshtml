@model Company
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id!=0?"Actualizar":"Crear") Empresa</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
           <input asp-for="Id" hidden />
           <div class="row">
               <div class="col-10">
                    <div class="border p-3">

                        <!--porque tambien va a editar-->
                        <!--para mostrar todos los errores que hubieron en el formulario-->
                        <!--<div asp-validation-summary="All"></div>-->

                        <div class="form-floating py-2 col-12">
                            <!--lo que se va a guardar, donde -->
                            <input asp-for="Nombre" type="text" class="form-control border-0 shadow" />
                            <label asp-for="Nombre" class="ms-2"></label>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Direccion" type="text" class="form-control border-0 shadow" />
                            <label asp-for="Direccion" class="ms-2"></label>
                            <!--para que se muestre el mensaje-->
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Ciudad" type="text" class="form-control border-0 shadow" />
                            <label asp-for="Ciudad" class="ms-2"></label>
                            <!--para que se muestre el mensaje-->
                            <span asp-validation-for="Ciudad" class="text-danger"></span>
                        </div>
                       <div class="form-floating py-2 col-12">
                            <input asp-for="CodigoPostal" type="text" class="form-control border-0 shadow" />
                            <label asp-for="CodigoPostal" class="ms-2"></label>
                            <!--para que se muestre el mensaje-->
                            <span asp-validation-for="CodigoPostal" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Telefono" type="text" class="form-control border-0 shadow" />
                            <label asp-for="Telefono" class="ms-2"></label>
                            <!--para que se muestre el mensaje-->
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary" style="width:150px">Actualizar</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary" style="width:150px">Crear</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary style="width:150px">
                                    Regresar al Listado
                                </a>
                            </div>
                        </div>
                    </div>
               </div>
           </div>

           
            <!--relleno de 3px en todos los lados, margentop-4px hola -->
        
       
        </form>
    </div>
</div>



@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            language: 'es',
            plugins: 'anchor autolink charmap codesample emoticons  lists   table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  align lineheight | numlist bullist indent outdent',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}