@model Categoria
<style>
    .cajaBtn {
        display: flex;
        justify-content: center;
        
    }
</style>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Editar Categoría</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <!--relleno de 3px en todos los lados, margentop-4px-->
            <div class="border p-3">
                <input asp-for="idCategoria" hidden />

                <!--para mostrar todos los errores que hubieron en el formulario-->
                <!--<div asp-validation-summary="All"></div>-->

                <div class="form-floating py-2 col-12">
                    <!--lo que se va a guardar, donde -->
                    <input asp-for="nombre" type="text" class="form-control border-0 shadow" />
                    <label asp-for="nombre" class="ms-2"></label>
                    <span asp-validation-for="nombre" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" type="text" class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <!--para que se muestre el mensaje-->
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

               
                <div class="row pt-2 cajaBtn">
                    <div class="col-6 col-md-2">
                        <button type="submit" class="btn btn-primary mx-2" style="width:150px">Actualizar</button>
                    </div>
                    <div class="col-6 col-md-2">
                        <a asp-controller="Categoria" asp-action="Index" class="btn btn-primary">
                                Regresar al Listado
                            </a>
                    </div>
                       
                    
                </div>
            </div>
        </form>
    </div>
</div>
