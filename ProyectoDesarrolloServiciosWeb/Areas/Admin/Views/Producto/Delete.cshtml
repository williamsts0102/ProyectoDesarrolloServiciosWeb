@model Producto
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Eliminar Categoría</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <!--relleno de 3px en todos los lados, margentop-4px-->
            <div class="border p-3 mt-4">

                <!--para mostrar todos los errores que hubieron en el formulario-->
                <!--<div asp-validation-summary="All"></div>-->

                <div class="form-floating py-2 col-12">
                    <!--lo que se va a guardar, donde -->
                    <input asp-for="nombreProducto" disabled type="text" class="form-control border-0 shadow" />
                    <label asp-for="nombreProducto" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="descripcion" disabled type="text" class="form-control border-0 shadow" />
                    <label asp-for="descripcion" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="precio" disabled type="text" class="form-control border-0 shadow" />
                    <label asp-for="precio" class="ms-2"></label>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger" style="width:150px">Eliminar</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Producto" asp-action="Index" class="btn btn-secondary style="width:150px">
                            Regresar al Listado
                        </a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>
