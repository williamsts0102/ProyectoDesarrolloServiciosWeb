@model List<Producto>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Lista de Productos</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <!--padding bottom/ padding top-->
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Producto" asp-action="Upsert" class="btn btn-primary">Crear Nueva Producto</a>
            </div>
        </div>



        <table class="table table-bordered table-striped">

            <thead>
                <tr>
                    <th>Nombre Producto</th>
                    <th>Descripcion</th>
                    <th>Precio</th>
                    <th>Categoria</th>
                </tr>
            </thead>

            <tbody>
                <!--Se mostrara de forma ascendente-->
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.nombreProducto</td>
                        <td>@obj.descripcion</td>
                        <td>@obj.precio</td>
                        
                        <td>@obj.Categoria.nombre</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <!--este id viene del controlador, el metdo editar el parametor-->
                                <a asp-controller="Producto" asp-action="Upsert" class="btn btn-primary mx-2"
                                    asp-route-idProducto="@obj.idProducto">
                                    Editar
                                </a>
                                <a asp-controller="Producto" asp-action="Delete" class="btn btn-primary mx-2"
                               asp-route-idProducto="@obj.idProducto">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>


        </table>
    </div>
</div>
