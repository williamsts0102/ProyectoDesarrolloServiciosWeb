@model List<Producto>
<style>
    .teibol{
        background-color:white;
        
    }
    .encabezado{
        
        background-color:lightgray;
        border:2px solid black;
    }
</style>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Lista de Productos</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <!--padding bottom/ padding top-->
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Producto" asp-action="Upsert" class="btn btn-primary">Crear Nueva Producto</a>
            </div>
        </div>

        <br />
        <br />
        <table id="tblData" class="table table-bordered teibol " style="width:100%">
            <thead class="encabezado">
                <tr>
                    <th>Nombre Producto</th>
                    <th>Descripcion</th>
                    <th>Precio</th>
                    <th>Categoria</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/producto.js"></script>
}